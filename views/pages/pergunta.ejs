<main class="main-pergunta">
    <section class="pergunta">
        <h1>Pergunta</h1>
        <p class="pergunta-texto">
            <%= question.data.description %>
        </p>
        <form class="pergunta-respostas" id="pergunta-form">
            <input type="hidden" name="question_id" value="<%- question.data.id %>">
            <% for (let i=0; i < question.data.alternatives.length; i++) {%>
                <label for="in<%- question.data.alternatives[i].data.id %>" class="resposta-item"
                    id="res<%- question.data.alternatives[i].data.id %>">
                    <input type="radio" name="alternative_id" value="<%- question.data.alternatives[i].data.id %>"
                        id="in<%- question.data.alternatives[i].data.id %>" required>
                    <%= question.data.alternatives[i].data.description %>
                </label>
                <% } %>
                <button type="submit" class="main-button" id="answer-button">Responder</button>
        </form>
        <a href="/question" id="next-question-button" class="invisible main-button">Próxima questão</a>
    </section>
    <%- include('../partials/status') %>
    <script src="scripts/question_form_validator.js"></script>
</main>